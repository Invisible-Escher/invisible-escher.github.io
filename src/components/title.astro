---
// Layout.astro
const { title } = Astro.props;
---

<div>
    <h1 class="page-title">
        {title === "Hello... How are you feeling today?"
            ? (
                <>
                    Hello.<br />
                    <i>How are you feeling today?</i>
                </>
            )
            : title}
    </h1>
    <slot />
</div>
